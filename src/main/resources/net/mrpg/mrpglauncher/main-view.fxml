<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" stylesheets="@launcher-style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.mrpg.mrpglauncher.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" styleClass="h1" text="MRPG Launcher" />
   <VBox alignment="BOTTOM_CENTER" prefHeight="700.0">
      <children>
         <Label fx:id="DetailsLabel" alignment="CENTER" />
         <ProgressBar fx:id="MCProgress" prefWidth="600.0" progress="0.0" styleClass="progress-bar, progress-bar-striped, progress-bar-animated" visible="false" />
         <ButtonBar buttonMinWidth="100.0" prefHeight="40.0" prefWidth="100.0">
            <buttons>
                <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#onLogoutButtonClick" prefWidth="150.0" styleClass="btn, btn-danger" text="ログアウト" visible="false" />
                <Button fx:id="agreementButton" mnemonicParsing="false" onAction="#onAgreementButtonClick" prefWidth="100.0" styleClass="btn, btn-default" text="利用規約" />
                <Button fx:id="startButton" onAction="#onStartButtonClick" prefWidth="150.0" styleClass="btn, btn-primary" text="開始" />
            </buttons>
            <VBox.margin>
               <Insets left="60.0" right="60.0" />
            </VBox.margin>
         </ButtonBar>
      </children>
   </VBox>
</VBox>
