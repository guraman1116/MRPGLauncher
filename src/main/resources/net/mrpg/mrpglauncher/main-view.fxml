<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>

<BorderPane fx:id="rootPane" prefHeight="600.0" prefWidth="1000.0" stylesheets="@launcher-style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.mrpg.mrpglauncher.MainController">

    <!-- Left Sidebar -->
    <left>
        <VBox fx:id="sidebar" alignment="TOP_CENTER" minWidth="0.0" prefWidth="280.0" spacing="10.0" styleClass="sidebar">
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </padding>
            <children>
                <Label styleClass="sidebar-title" text="MRPG Launcher" />
                <ScrollPane fx:id="configScrollPane" fitToWidth="true" hbarPolicy="NEVER" styleClass="config-list-scroll-pane">
                    <content>
                        <VBox fx:id="configContainer" spacing="8.0" />
                    </content>
                </ScrollPane>
                <VBox VBox.vgrow="ALWAYS" /> <!-- Spacer -->
                <Button fx:id="agreementButton" onAction="#onAgreementButtonClick" prefWidth="250.0" text="利用規約" />
                <Button fx:id="logoutButton" onAction="#onLogoutButtonClick" prefWidth="250.0" text="ログアウト" visible="false" />
            </children>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <BorderPane fx:id="mainContent" styleClass="content-area">
            <top>
                <Button fx:id="sidebarToggleButton" onAction="#toggleSidebar" styleClass="sidebar-toggle-button" BorderPane.alignment="TOP_LEFT">
                    <graphic>
                        <FontIcon iconLiteral="mdi-menu" iconSize="20" />
                    </graphic>
                    <BorderPane.margin>
                        <Insets left="15.0" top="15.0" />
                    </BorderPane.margin>
                </Button>
            </top>
            <center>
                <VBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Label fx:id="configNameLabel" styleClass="content-header" text="構成を選択してください" />
                        <Label fx:id="configDescriptionLabel" styleClass="config-description" text="左のメニューから起動したいエピソードを選択してください。" textAlignment="CENTER" wrapText="true" />
                    </children>
                </VBox>
            </center>
            <bottom>
                <VBox alignment="CENTER" spacing="20.0">
                    <padding>
                        <Insets bottom="50.0" />
                    </padding>
                    <children>
                        <ProgressBar fx:id="progressBar" prefWidth="250.0" progress="0.0" visible="false" />
                        <Button fx:id="startButton" onAction="#onStartButtonClick" prefHeight="60.0" prefWidth="250.0" styleClass="launch-button" text="開始" />
                    </children>
                </VBox>
            </bottom>
        </BorderPane>
    </center>

</BorderPane>
